<UserControl x:Class="Dev2.Activities.Help.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:adorners="clr-namespace:Dev2.Activities.Adorners"
             xmlns:common="clr-namespace:Dev2.Common;assembly=Dev2.Core"
             xmlns:errors="clr-namespace:Dev2.Providers.Errors;assembly=Dev2.Infrastructure"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Focusable="False"
             Visibility="{Binding HelpText, Converter={StaticResource EmptyStringToVisibilityConverter}}"
             d:DataContext="{d:DesignInstance Type=adorners:HelpViewModel}" x:Name="HelpViewControl">
    <UserControl.Resources>
        <ResourceDictionary x:Name="Resources"
                            Source="pack://application:,,,/Dev2.Activities.Designers;component/Designers/DsfActivityResources.xaml">
        </ResourceDictionary>
    </UserControl.Resources>
    <Border>
        <Grid Width="140" Margin="5,5,0,5">
            <Grid.Resources>
                <DataTemplate x:Key="ErrorDisplayTemplate" DataType="errors:IActionableErrorInfo">
                    <StackPanel Margin="0,5,0,5" Width="135">
                        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top">
                                <Hyperlink Command="{Binding Path=DataContext.OpenHyperlinkCommand, ElementName=HelpViewControl}" CommandParameter="{Binding}">
                                    <Run  Text="{Binding Message}"></Run>
                                </Hyperlink>
                           </TextBlock>
                        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding FixData}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="1"
                       TextWrapping="Wrap"
                       Margin="0,5,5,5"
                       VerticalAlignment="Top"
                       Text="{Binding HelpText}" Visibility="{Binding DisplayHelpText}"/>
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Errors}" ItemTemplate="{StaticResource ErrorDisplayTemplate}" Visibility="{Binding DisplayErrors}" BorderBrush="Transparent"/>
        </Grid>
    </Border>
</UserControl>
