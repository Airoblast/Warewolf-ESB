<Window x:Class="Dev2.Studio.Views.Help.FeedbackView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Feedback"
        VerticalAlignment="Center"
        Width="Auto"
        SizeToContent="WidthAndHeight"
        HorizontalAlignment="Center"
        WindowStartupLocation="CenterOwner"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:ei="clr-namespace:Microsoft.Expression.Interactivity.Core;assembly=Microsoft.Expression.Interactions"
        Icon="pack://application:,,,/Warewolf Studio;component/Images/HelpFeedback-16.png"
        xmlns:triggerActions="clr-namespace:Dev2.Studio.Core.AppResources.TriggerActions;assembly=Dev2.Studio.Core"
        xmlns:local="clr-namespace:Dev2.Studio.AppResources.Behaviors">
    <i:Interaction.Behaviors>
        <local:WindowCloseBehviour CloseIndicator="{Binding CloseRequested}" />
    </i:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Comments"/>
        
        <TextBox x:Name="Comments"  Margin="15,0,15,0" Text="{Binding Comment, Mode=TwoWay}" AcceptsReturn="True"
                 Grid.Row="1" Height="200" Width="400" AutomationProperties.AutomationId="FeebackView_Comments">
            <i:Interaction.Triggers>
                <ei:PropertyChangedTrigger Binding="{Binding UpdateCaretPosition}">
                    <triggerActions:SetCaretIndexAction IndexPosition="12"/>
                </ei:PropertyChangedTrigger>
            </i:Interaction.Triggers>
        </TextBox>
        
        <Label Content="Category" Grid.Row="2"/>
        <ComboBox Margin="15,0,0,0" ItemsSource="{Binding Categories}" MinWidth="200" HorizontalAlignment="Left" 
                  SelectedItem="{Binding SelectedCategory, Mode=TwoWay}" Grid.Row="3" AutomationProperties.AutomationId="FeebackView_Category"/>
        
        <Button Content="This feedback has a recordings file. Browse..." Grid.Row="4" HorizontalAlignment="Left" Margin="5,4,0,0"
                Style="{StaticResource LinkButton}" Command="{Binding OpenRecordingAttachmentFolderCommand}"
               Visibility="{Binding HasAttachment, Converter={StaticResource BoolToVisConverter}}"
                AutomationProperties.AutomationId="FeebackView_OpenAttachment"/>

        <Button Content="This feedback has a log file. Browse..." Grid.Row="5" HorizontalAlignment="Left" Margin="5,4,0,0"
                Style="{StaticResource LinkButton}" Command="{Binding OpenServerLogAttachmentFolderCommand}"
               Visibility="{Binding HasAttachment, Converter={StaticResource BoolToVisConverter}}"
                AutomationProperties.AutomationId="FeebackView_OpenAttachment"/>

        <Button Content="Cancel" MinWidth="100"  Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding CancelCommand}" Margin="15,4,15,0"
                AutomationProperties.AutomationId="FeebackView_Cancel"/>
        <Button Content="Open default email" MinWidth="100"  Grid.Row="6" HorizontalAlignment="Right" VerticalAlignment="Top" Command="{Binding SendCommand}" Margin="0,4,15,15"
                AutomationProperties.AutomationId="FeebackView_Send"/>
    </Grid>
</Window>
