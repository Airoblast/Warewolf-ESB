<Window x:Class="Unlimited.Applications.BusinessDesignStudio.Views.WorkflowInputDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Dev2="clr-namespace:Dev2.UI"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"                     
        xmlns:local="clr-namespace:Dev2.Studio.AppResources.Behaviors"
        xmlns:InterfaceImplementors="clr-namespace:Dev2.Studio.InterfaceImplementors"
        xmlns:igDock="http://infragistics.com/DockManager"
        Title="Debug"         
        Width="450"        
        Height="400"       
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=DataListInputs}">
    <Window.Icon>
        <BitmapImage UriSource="pack://application:,,,/Dev2.Studio;component/Images/debugplay.png" ></BitmapImage>
    </Window.Icon>
    <Window.InputBindings>
        <KeyBinding Key="F5" Command="{Binding Path=OKCommand}"/>
        <!--<KeyBinding Key="F10" Command="{Binding Path=StepThrough}"/>-->
        <KeyBinding Key="Esc" Command="{Binding Path=CancelCommand}"/>
    </Window.InputBindings>

    <i:Interaction.Behaviors>
        <local:WindowCloseBehviour CloseIndicator="{Binding CloseRequested}" />
    </i:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <TabControl x:Name="TabItems" SelectionChanged="TabControl_SelectionChanged">
            <TabItem AutomationProperties.AutomationId="UI_InputDataTab_AutoID" Header="Input Data" IsSelected="True">
                <DataGrid SelectionMode="Single" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding Path=WorkflowInputs}" HeadersVisibility="None" CanUserDeleteRows="True" x:Name="DataListInputs" SelectionChanged="DataListInputs_SelectionChanged">
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Focusable" Value="False"/>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="1*"  IsReadOnly="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Label ToolTip="{Binding Path=Description}" Content="{Binding Path=DisplayValue, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsTabStop="False">
                                        <Label.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Delete Last Recordset Row (Shift+Delete)" Click="MenuItem_DeleteRow"/>
                                                <MenuItem Header="Add Blank Row To Recordset (Shift+Enter)" Click="MenuItem_AddRow"/>
                                            </ContextMenu>
                                        </Label.ContextMenu>
                                    </Label>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="1*"  IsReadOnly="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Dev2:IntellisenseTextBox x:Name="txtValue" FilterType="All" WrapInBrackets="False" Text="{Binding Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,2,1,2" Width="Auto" PreviewKeyDown="IntellisenseTextBox_PreviewKeyDown" GotFocus="TextBox_GotFocus" TextChanged="TextBox_TextChanged" MaxHeight="39">
                                        <AutomationProperties.AutomationId>
                                            <MultiBinding StringFormat="UI_{0}txt_AutoID">
                                                <Binding Path="DisplayValue"/>
                                            </MultiBinding>
                                        </AutomationProperties.AutomationId>
                                        <Dev2:IntellisenseTextBox.IntellisenseProvider>
                                            <InterfaceImplementors:CompositeIntellisenseProvider>
                                                <InterfaceImplementors:BlankIntellisenseProvider />
                                            </InterfaceImplementors:CompositeIntellisenseProvider>
                                        </Dev2:IntellisenseTextBox.IntellisenseProvider>
                                    </Dev2:IntellisenseTextBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="XML" AutomationProperties.AutomationId="UI_XMLTab_AutoID">
                <ContentControl AutomationProperties.AutomationId="UI_XMlEditor_AutoID" x:Name="XmlOutput" AllowDrop="False" />
                <!--<TextBox AcceptsTab="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Text="{Binding Path=XmlData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />-->
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1" Name="grdWorkflowTransition">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25px" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <CheckBox AutomationProperties.AutomationId="UI_RememberInputsCb_AutoID" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="cbxRememberInputs" IsChecked="{Binding Path=RememberInputs, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            <Label VerticalAlignment="Center" Content="Remember Debug Inputs" Grid.Column="1" />

        </Grid>
        <Grid Grid.Row="2" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="110" />
            </Grid.ColumnDefinitions>
            <Button Content="Cancel" AutomationProperties.AutomationId="UI_Cancelbtn_AutoID" Command="{Binding Path=CancelCommand}" Grid.Row="0" Grid.Column="0" MaxHeight="25" MinWidth="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,5,0" />
            <Button Content="Step Through" AutomationProperties.AutomationId="UI_StepThroughbtn_AutoID" IsEnabled="False" Grid.Column="1" MaxHeight="25" MinWidth="100" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5,0,5,0" />
            <Button Content="Execute" AutomationProperties.AutomationId="UI_Executebtn_AutoID" Click="Button_Click" Command="{Binding Path=OKCommand}" Grid.Row="0" Grid.Column="2" MaxHeight="25" MinWidth="100" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5,0,5,0"/>
        </Grid>
    </Grid>
</Window>
