<sap:ActivityDesigner x:Class="Unlimited.Applications.BusinessDesignStudio.Activities.DsfCommentActivityDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation"
    xmlns:attachedProperties="clr-namespace:Dev2.Studio.AppResources.AttachedProperties"
                      PreviewMouseDoubleClick="DsfCommentActivityDesigner_OnPreviewMouseDoubleClick"
                      MouseEnter="DsfCommentActivityDesigner_OnMouseEnter"
                      MouseLeave="DsfCommentActivityDesigner_OnMouseLeave">
    <sap:ActivityDesigner.Icon>
        <DrawingBrush>
            <DrawingBrush.Drawing>
                <ImageDrawing>
                    <ImageDrawing.Rect>
                        <Rect Location="0,0" Size="16,16" ></Rect>
                    </ImageDrawing.Rect>
                    <ImageDrawing.ImageSource>
                        <BitmapImage UriSource="pack://application:,,,/Warewolf Studio;component/Images/ToolComment-32.png" ></BitmapImage>
                    </ImageDrawing.ImageSource>
                </ImageDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </sap:ActivityDesigner.Icon>
    <Border BorderBrush="{StaticResource ButtonBorderBrush}" BorderThickness="1,1,1,1">
        <TextBox Text="{Binding Path=ModelItem.Text, UpdateSourceTrigger=PropertyChanged}" 
                ScrollViewer.VerticalScrollBarVisibility="Auto" 
                MaxHeight="500px" MaxWidth="500px" 
                MinHeight="30px" MinWidth="180px" 
                Height="Auto"
                Margin="3"
                TextWrapping="Wrap" 
                AcceptsReturn="True" 
                VerticalContentAlignment="Stretch"
                attachedProperties:WizardEngineAttachedProperties.DontOpenWizard="True"/>
    </Border>
</sap:ActivityDesigner>
