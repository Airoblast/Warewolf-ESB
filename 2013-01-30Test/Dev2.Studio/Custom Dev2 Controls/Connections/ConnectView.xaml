<Window x:Class="Dev2.Studio.Views.Explorer.ConnectView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"                     
        xmlns:local="clr-namespace:Dev2.Studio.AppResources.Behaviors"                
        Title="Connect To Server" Height="200" Width="440" WindowStartupLocation="CenterOwner">
    <i:Interaction.Behaviors>
        <local:WindowCloseBehviour CloseIndicator="{Binding CloseRequested}" />
    </i:Interaction.Behaviors>   
    <Grid>
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>

            <RowDefinition Height="25" />
            <RowDefinition />


        </Grid.RowDefinitions>
        <Label Grid.Row="1" Content="Server Name:" HorizontalAlignment="Right" />
        <TextBox AutomationProperties.AutomationId="UI_ServerNametxt_AutoID" Name="tbxServerName" Height="25"  Grid.Row="1" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Validation.ErrorTemplate="{StaticResource ResourceKey=DefaultErrorTemplate}" HorizontalAlignment="Stretch"   />
        <Label Grid.Row="2" Content="Address:" HorizontalAlignment="Right" />
        <TextBox AutomationProperties.AutomationId="UI_Addresstxt_AutoID" Grid.Row="2" Height="25" Grid.Column="1" Text="{Binding DsfAddress, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Validation.ErrorTemplate="{StaticResource ResourceKey=DefaultErrorTemplate}" HorizontalAlignment="Stretch"  />
        <Label Grid.Row="3" Content="Web Server Port:" HorizontalContentAlignment="Right" />
        <TextBox AutomationProperties.AutomationId="UI_WebServerPorttxt_AutoID" Grid.Row="3" Text="{Binding WebServerPort, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Validation.ErrorTemplate="{StaticResource ResourceKey=DefaultErrorTemplate}" Grid.Column="1" HorizontalContentAlignment="Right" />
        <!--<Label Grid.Row="4" Grid.Column="1"  Content="{Binding WebServerAddress.OriginalString}" FontSize="10" VerticalContentAlignment="Top" />--> 
        <Grid Grid.Row="5" Grid.ColumnSpan="3" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition  Width="110" />

            </Grid.ColumnDefinitions>
            <Button AutomationProperties.AutomationId="UI_Connectbtn_AutoID" Grid.Column="0" Command="{Binding OkayCommand}" Content="Connect" MinWidth="100" MaxWidth="100" MaxHeight="25" IsDefault="True" HorizontalAlignment="Right" />
            <Button AutomationProperties.AutomationId="UI_Cancelbtn_AutoID" Grid.Column="1" Command="{Binding CancelCommand}" Content="Cancel" MinWidth="100" MaxWidth="100" MaxHeight="25" HorizontalAlignment="Right"/>
        </Grid>        
    </Grid>
</Window>
