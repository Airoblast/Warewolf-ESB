<ss:ModernInfoStep 
    x:Class="Gui.FinishStep"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ss="http://sharpsetup.eu/schemas/xaml/wpfui/2012"
    xmlns:props="clr-namespace:Gui.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="360" 
    d:DesignWidth="500"
    StepType="Last"
    Style="{StaticResource {x:Type ss:ModernInfoStep}}"
    >
    <Border Margin="10,0,0,0">
        <DockPanel HorizontalAlignment="Stretch">
            <TextBlock Style="{StaticResource TextBlockStyle}" FontSize="14" FontWeight="Bold" DockPanel.Dock="Top" Height="60" Margin="0,10,0,10" TextWrapping="Wrap" Text="{x:Static props:Resources.FinishStep_Title}" />
            <TextBlock Style="{StaticResource TextBlockStyle}" TextWrapping="NoWrap" DockPanel.Dock="Bottom" Text="{x:Static props:Resources.FinishStep_MessageBottom}" Visibility="Hidden" Name="tbFinish"/>
            <CheckBox Style="{StaticResource CheckBoxStyle}" DockPanel.Dock="Bottom" IsChecked="true" Content="{x:Static props:Resources.FinishStep_Start_Studio_Text}" Margin="0,0,0,5" Click="BtnExitWithStart" Visibility="Visible" Name="cbStartStudio"/>
            <TextBlock Style="{StaticResource TextBlockStyle}" TextWrapping="Wrap" Text="{x:Static props:Resources.FinishStep_MessageMain}" />
        </DockPanel>
    </Border>
</ss:ModernInfoStep>
