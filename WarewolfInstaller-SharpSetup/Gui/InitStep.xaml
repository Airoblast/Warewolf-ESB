<ss:ModernActionStep 
    x:Class="Gui.InitStep"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ss="http://sharpsetup.eu/schemas/xaml/wpfui/2012"
    xmlns:props="clr-namespace:Gui.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="360" 
    d:DesignWidth="500"
    Title="{x:Static props:Resources.InitStep_Title}"
    Subtitle="{x:Static props:Resources.InitStep_Subtitle}"
    Entered="InitStep_Entered"
    >
    <DockPanel>
        <Label Content="{x:Static props:Resources.InitStep_MessageMain}" DockPanel.Dock="Top" Padding="0,5,5,5" />
        <DockPanel DockPanel.Dock="Bottom" Margin="0,10,0,0">
            <Button Name="btnRerun" Content="Retry" DockPanel.Dock="Right" Margin="10,0,0,0" Padding="16,2,16,2" />
            <Label Name="lblReviewErrors" Visibility="Collapsed" Content="{x:Static props:Resources.InitStep_MessageErrors}" Padding="0,5,5,5" />
            <Label Name="lblReviewWarnings" Visibility="Collapsed" Content="{x:Static props:Resources.InitStep_MessageWarnings}" Padding="0,5,5,5" />
        </DockPanel>
        <ss:PrerequisiteList Name="plMain" Check="plMain_Check">
            <ss:PrerequisiteCheckItem Id="svrStop" SortOrder="1" Title="Stop Server" />
            <!--<ss:PrerequisiteCheckItem Id="tst2" SortOrder="2" Title="Test 2" />-->
            <!--<ss:PrerequisiteCheckItem Id="prereqmodules" SortOrder="3" Title="Checks from prereq modules will be visible only in the final installer" />-->
        </ss:PrerequisiteList>
    </DockPanel>
</ss:ModernActionStep>
