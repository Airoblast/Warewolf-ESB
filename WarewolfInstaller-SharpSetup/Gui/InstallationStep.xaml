<ss:ModernActionStep x:Class="Gui.InstallationStep"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:ss="http://sharpsetup.eu/schemas/xaml/wpfui/2012"
                     xmlns:props="clr-namespace:Gui.Properties"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     mc:Ignorable="d"
                     d:DesignHeight="360"
                     d:DesignWidth="500"
                     Title="{x:Static props:Resources.InstallationStep_Title}"
                     Subtitle="{x:Static props:Resources.InstallationStep_Subtitle}"
                     Entered="InstallationStep_Entered"
                     StepType="TransitionaryOnetime"
                     Style="{StaticResource InstallationStepStyle}">
    <Grid Background="Transparent"
          DockPanel.Dock="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="1" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource TextBlockStyle}"
                   Background="White"
                   Padding="20,10,10,10"
                   Height="35"
                   Grid.Row="0"
                   Grid.Column="0"
                   FontSize="14"
                   Margin="0"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   Text="Setup" />
        <Rectangle Grid.Row="1"
                   Fill="#F3700D"></Rectangle>
        <StackPanel Grid.Row="2">
            <DockPanel Margin="0, 10, 0, 20">
                <Image Source="/Gui;component/ResourceFiles/Images/InstallationStep.png"
                       SnapsToDevicePixels="True"
                       DockPanel.Dock="Left"
                       Stretch="None"
                       Margin="10" />
                <TextBlock Style="{StaticResource TextBlockStyle}"
                           Margin="10"
                           TextWrapping="Wrap"
                           Text="{x:Static props:Resources.InstallationStep_MessageMain}" />
            </DockPanel>
            <ss:InstallationProgressLabel Width="300"
                                          Margin="0,10,0,10" />
            <ss:InstallationProgressBar Width="300"
                                        Foreground="Crimson"
                                        Height="20" />
        </StackPanel>
    </Grid>
</ss:ModernActionStep>
