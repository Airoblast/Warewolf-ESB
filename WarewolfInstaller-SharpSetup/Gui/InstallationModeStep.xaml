<ss:ModernInfoStep 
    x:Class="Gui.InstallationModeStep"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ss="http://sharpsetup.eu/schemas/xaml/wpfui/2012"
    xmlns:props="clr-namespace:Gui.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="360" 
    d:DesignWidth="500"
    MoveNext="InstallationModeStep_MoveNext"
    Style ="{StaticResource {x:Type ss:ModernInfoStep}}"
    >
    <DockPanel HorizontalAlignment="Stretch" Margin="10,0,0,0">
        <TextBlock FontSize="14" FontWeight="Bold" DockPanel.Dock="Top" Height="60" Margin="0,10,0,10" TextWrapping="Wrap" Text="{x:Static props:Resources.InstallationModeStep_Title}" />
        <TextBlock TextWrapping="Wrap" DockPanel.Dock="Top" Margin="0,0,0,20" Text="{x:Static props:Resources.InstallationModeStep_MessageMain}" />
        <TextBlock TextWrapping="NoWrap" DockPanel.Dock="Bottom" Text="{x:Static props:Resources.InstallationModeStep_MessageBottom}" />
        <ss:InstallationModeSelector Name="imsModes" Margin="30,10,10,10" />
        <Label/>
    </DockPanel>
</ss:ModernInfoStep>
