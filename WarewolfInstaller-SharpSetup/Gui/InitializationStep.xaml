<ss:ModernInfoStep x:Class="Gui.InitializationStep"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:ss="http://sharpsetup.eu/schemas/xaml/wpfui/2012"
                   xmlns:props="clr-namespace:Gui.Properties"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   mc:Ignorable="d"
                   d:DesignHeight="360"
                   d:DesignWidth="500"
                   Entered="InitializationStep_Entered"
                   StepType="TransitionaryOnetime"
                   Style="{StaticResource {x:Type ss:ModernInfoStep}}">
    <Border Margin="10,0,0,0">
        <DockPanel>                          
            <TextBlock FontSize="14"
                       Style="{StaticResource TextBlockStyle}"
                       FontWeight="Bold"
                       DockPanel.Dock="Top"
                       Height="60"
                       Margin="0,10,0,10"
                       TextWrapping="Wrap"
                       Text="{x:Static props:Resources.InitializationStep_Title}" />
            <TextBlock TextWrapping="Wrap"
                       Style="{StaticResource TextBlockStyle}"
                       Text="{x:Static props:Resources.InitializationStep_MessageMain}" />
        </DockPanel>
    </Border>
</ss:ModernInfoStep>
