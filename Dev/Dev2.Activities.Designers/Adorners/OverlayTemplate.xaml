
    <UserControl x:Class="Dev2.Activities.Adorners.OverlayTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"          
             xmlns:behaviors="clr-namespace:Dev2.Studio.AppResources.Behaviors;assembly=Dev2.CustomControls"
             xmlns:behaviors2="clr-namespace:Dev2.CustomControls.Behavior;assembly=Dev2.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="270" d:DesignWidth="300">
    <Border x:Name="OuterBorder" 
            Focusable="True"
            BorderThickness="1,0,1,1" Background="White"    
            MinHeight="320" MinWidth="370"
            AllowDrop="True">
        <Grid x:Name="ContentGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ContentPresenter x:Name="ContentPresenter" 
                              Margin="0,5,0,0"
                              MinWidth="350" 
                              FocusManager.IsFocusScope="True">
                <i:Interaction.Behaviors>
                    <behaviors2:ActualSizeBindingBehavior x:Name="ActualSizeBindingBehavior"
                                                              HorizontalOffset="5" VerticalOffset="50"/>
                </i:Interaction.Behaviors>
            </ContentPresenter>


            <ScrollViewer x:Name="AdornerHelpScrollViewer"  Grid.Column="1">
                <ContentControl x:Name="HelpContent" Focusable="False">

                </ContentControl>
            </ScrollViewer>

            <Image x:Name="ExpandCollapseButtonImage"   
                          Grid.Column="2"
                          MouseDown="ExpandCollapseButtonImage_MouseDown"                      
                          VerticalAlignment="Top"
                          Margin="0,7,3,0"                           
                          Height="7" Width="7">
            </Image>

            <Button x:Name="DoneButton"     
                          Grid.Row="1" Grid.ColumnSpan="2"
                          HorizontalAlignment="Right"
                          Width="80" Margin="0,0,5,5"
                          Focusable="True"
                          Content="Done"
                          Click="DoneButton_Click"
                          AutomationProperties.AutomationId="DoneButton"/>

            <Thumb Grid.Row="1" Grid.Column="2" Style="{StaticResource BottomRightResizeThumbStyle}">
                <i:Interaction.Behaviors>
                    <behaviors:ThumbResizeBehavior x:Name="ThumbResizeBehavior"/>
                </i:Interaction.Behaviors>
            </Thumb>
        </Grid>

    </Border>
</UserControl>
