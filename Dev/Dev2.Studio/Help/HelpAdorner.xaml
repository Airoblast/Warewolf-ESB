<adorners:AdornerControl x:Class="Dev2.Help.HelpAdorner"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:adorners="clr-namespace:Dev2.Activities.Designers2.Core.Adorners;assembly=Dev2.Activities.Designers"
                         xmlns:help="clr-namespace:Dev2.Help"
                         mc:Ignorable="d"
                         d:DesignHeight="300"
                         d:DesignWidth="300"
                         d:DataContext="{d:DesignInstance help:IHelpAdorner}">
    <Border HorizontalAlignment="Left"
            Style="{StaticResource HelpAdornerBorderStyle}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Text="Help"
                       FontWeight="Bold"></TextBlock>
            <Button Grid.Row="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Command="{Binding CloseHelpCommand}"
                    ToolTip="Close Help"
                    Style="{StaticResource CloseButtonStyle}">
            </Button>
            <TextBlock Grid.Row="1"
                       Margin="0,5,0,0"
                       Text="{Binding HelpText}"
                       VerticalAlignment="Top"
                       TextWrapping="WrapWithOverflow"></TextBlock>
        </Grid>
    </Border>
</adorners:AdornerControl>
