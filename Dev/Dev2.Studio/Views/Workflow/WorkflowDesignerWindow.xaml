<UserControl x:Class="Unlimited.Applications.BusinessDesignStudio.WorkflowDesignerWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"                     
             xmlns:local="clr-namespace:Dev2.Studio.AppResources.Behaviors"             
             >    
    <Grid>
        <ContentControl LostKeyboardFocus="Designer_OnLostKeyboardFocus" Name="Designer" Content="{Binding Path=DesignerView}" AutomationProperties.AutomationId="{Binding Path=DesignerText}">
            <i:Interaction.Behaviors>
                <local:WorkflowDesignerLinkBehaviours CollapseAllCommand="{Binding CollapseAllCommand}" ExpandAllCommand="{Binding ExpandAllCommand}" />
            </i:Interaction.Behaviors>
        </ContentControl>
        <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#88000000" Visibility="{Binding PopupContent, Converter={StaticResource NullToVisibilityConverter}}"
                Padding="30" >
            <ContentControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="{Binding PopupContent}"
                        MaxHeight="600" MaxWidth="800" />
        </Border>
    </Grid>
</UserControl>
