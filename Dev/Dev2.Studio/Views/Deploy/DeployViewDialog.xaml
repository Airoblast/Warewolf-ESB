<Window x:Class="Dev2.Views.Deploy.DeployViewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:local="clr-namespace:Dev2.Studio.AppResources.Behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:deploy="clr-namespace:Dev2.ViewModels.Deploy"
        Title="Resources exists in the destination server"
        Icon="{Binding ImageSource, Converter={StaticResource StringToResourceConverter}}"
        Width="350"
        Height="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance deploy:DeployDialogViewModel}">
        <!--<Window.Resources>
            <ResourceDictionary Source="pack://application:,,,/Dev2.Activities.Designers;component/Themes/ActivityResources.xaml" />
        </Window.Resources>-->
    
    <i:Interaction.Behaviors>
        <local:WindowCloseBehviour CloseIndicator="{Binding CloseRequested}" />
    </i:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding ConflictingItems}"
                  AutoGenerateColumns="False"
                  Grid.Row="0">
             <DataGrid.Columns>
                <DataGridTemplateColumn Header="Source Resource"
                                        Width="*"
                                        IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Label Content="{Binding Path=Item1}">
                            </Label>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                 
                   <DataGridTemplateColumn Header="Destination Resource"
                                        Width="*"
                                        IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Label Content="{Binding Path=Item2}">
                            </Label>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Margin="5"
                    Width="110"
                    MaxHeight="30"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Grid.Row="1">
            <Button Content="OK"
                    IsEnabled="{Binding SelectedResourceModel, Converter={StaticResource NullToBoolConvert} }"
                    Command="{Binding OkCommand}"
                    Width="110"
                    Margin="5"
                    MaxHeight="30"></Button>
        </StackPanel>
    </Grid>
</Window>
