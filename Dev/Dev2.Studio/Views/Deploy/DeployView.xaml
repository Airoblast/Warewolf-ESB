<UserControl x:Class="Dev2.Studio.Views.Deploy.DeployView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ap="clr-namespace:Dev2.Studio.AppResources.AttachedProperties"
             xmlns:viewModels="clr-namespace:Dev2.Studio.Core.ViewModels;assembly=Dev2.Studio.Core"
             xmlns:nv="clr-namespace:Dev2.Studio.Views.Navigation" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"                     
             xmlns:local="clr-namespace:Dev2.Studio.AppResources.Behaviors"
             xmlns:navigation="clr-namespace:Dev2.Studio.ViewModels.Navigation"
    xmlns:customDev2Controls="clr-namespace:Dev2.Studio.Custom_Dev2_Controls"
    Name="DeployUserControl"
             ap:UIElementTitleProperty.Title="Deploy">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="5" Grid.IsSharedSizeScope="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Source Server" />
                    <ComboBox AutomationProperties.AutomationId="UI_SourceServercbx_AutoID" Grid.Column="1" 
                              ItemsSource="{Binding Servers}" SelectedItem="{Binding SelectedSourceServer}" 
                              Margin="5,0,0,0" DisplayMemberPath="Alias" Height="22" VerticalAlignment="Bottom">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="AutomationProperties.AutomationId">
                                    <Setter.Value>
                                        <MultiBinding StringFormat="UI_SourceServer_{0}_AutoID">
                                            <Binding Path="Alias" />
                                        </MultiBinding>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                    <Button AutomationProperties.AutomationId="UI_SourceServerConnectbtn_AutoID" 
                            Grid.Column="2" Content="..." Margin="5,0,0,0" Command="{Binding ConnectCommand}" 
                            CommandParameter="{Binding DataContext, ElementName=SourceNavigationView}" />
                </Grid>

                <Grid Grid.Row="1" Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox AutomationProperties.AutomationId="UI_SourceServerSearchtxt_AutoID" 
                             Name="TxtSearch" Grid.Column="0" HorizontalAlignment="Stretch" 
                             Text="{Binding Path=Source.SearchFilter, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background" Value="{StaticResource SearchHint}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <Button AutomationProperties.AutomationId="UI_SourceServerRefreshbtn_AutoID" 
                            Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Grid.Column="1" 
                            Command="{Binding Path=Source.RefreshMenuCommand}">
                        <Image  Source="/images/refresh.png" Width="14" Height="14" HorizontalAlignment="Left"/>
                    </Button>
                </Grid>

                <nv:NavigationView Grid.Row="2" DataContext="{Binding Source}" x:Name="SourceNavigationView">
                    <nv:NavigationView.ItemContainerStyle>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                            <Setter Property="Visibility" Value="{Binding IsFiltered, Converter={StaticResource BoolToVisibilityConverterNegative}, Mode=OneWay}" />
                            <Setter Property="FontWeight" Value="Normal" />
                            <Setter Property="AutomationProperties.AutomationId">
                                <Setter.Value>
                                    <MultiBinding StringFormat="UI_SourceServer_{0}_AutoID">
                                        <Binding Path="DataContext.DisplayName" RelativeSource="{RelativeSource Self}"/>
                                    </MultiBinding>
                                </Setter.Value>
                            </Setter>                            
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="FontWeight" Value="Bold" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="FontWeight" Value="UltraLight" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </nv:NavigationView.ItemContainerStyle>
                    <nv:NavigationView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type navigation:AbstractTreeViewModel}" ItemsSource="{Binding Path=Children}">
                            <StackPanel Orientation="Horizontal" AllowDrop="True">
                                <!--TODO i:Interaction.Behaviors>
                                    <local:NavigationItemViewModelMouseDownBehavior SelectOnClick="True" />
                                </i:Interaction.Behaviors-->

                                <CheckBox IsChecked="{Binding IsChecked}" Margin="0,0,5,0">
                                    <AutomationProperties.AutomationId>
                                        <MultiBinding StringFormat="UI_CheckBox{0}_AutoID">
                                            <Binding Path="DisplayName"/>
                                        </MultiBinding>
                                    </AutomationProperties.AutomationId>
                                    <!--<i:Interaction.Behaviors>
                                        <local:NavigationItemViewModelDeployHighlightingBehavior 
                                    TargetEnvironment="{Binding DataContext.TargetEnvironment, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=2}}" 
                                    OverrideHighlightBrush="Red" />
                                    </i:Interaction.Behaviors>-->
                                </CheckBox>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DisplayName}" />
                                    <TextBlock Text=" (" Visibility="{Binding ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                    <TextBlock Text="{Binding ChildrenCount, Mode=OneWay}"  Visibility="{Binding ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                    <TextBlock Text=")" Visibility="{Binding ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                </StackPanel>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </nv:NavigationView.ItemTemplate>
                </nv:NavigationView>
            </Grid>

            <GridSplitter Width="2.5" />

            <Grid Grid.Column="1" Margin="2.5,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Destination Server" Grid.RowSpan="2" />
                    <ComboBox AutomationProperties.AutomationId="UI_DestinationServercbx_AutoID" Grid.Column="1" 
                              ItemsSource="{Binding Servers}" SelectedItem="{Binding SelectedDestinationServer}" 
                              Margin="5,0,0,0" DisplayMemberPath="Alias" Grid.RowSpan="2">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="AutomationProperties.AutomationId">
                                    <Setter.Value>
                                        <MultiBinding StringFormat="UI_DestinationServer_{0}_AutoID">
                                            <Binding Path="Alias" />
                                        </MultiBinding>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                    <Button AutomationProperties.AutomationId="UI_DestinationServerConnectbtn_AutoID" 
                            Grid.Column="2" Content="..." Margin="5,0,0,0" Command="{Binding ConnectCommand}" 
                            CommandParameter="{Binding DataContext, ElementName=TargetNavigationView}" Grid.RowSpan="2" />
                </Grid>

                <Grid Grid.Row="1" Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox AutomationProperties.AutomationId="UI_DestinationServerSearchtxt_AutoID" 
                             Grid.Column="0" HorizontalAlignment="Stretch" 
                             Text="{Binding Path=Target.SearchFilter, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background" Value="{StaticResource SearchHint}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <Button AutomationProperties.AutomationId="UI_DestinationServerRefreshbtn_AutoID" 
                            Background="Transparent" BorderBrush="Transparent" BorderThickness="0" 
                            Grid.Column="1" Command="{Binding Path=Target.RefreshMenuCommand}">
                        <Image  Source="/images/refresh.png" Width="14" Height="14" HorizontalAlignment="Left"/>
                    </Button>
                </Grid>

                <nv:NavigationView Grid.Row="2" DataContext="{Binding Target}" x:Name="TargetNavigationView">
                    <nv:NavigationView.ItemContainerStyle>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                            <Setter Property="Visibility" Value="{Binding IsFiltered, Converter={StaticResource BoolToVisibilityConverterNegative}, Mode=OneWay}" />
                            <Setter Property="FontWeight" Value="Normal" />
                            <Setter Property="AutomationProperties.AutomationId">
                                <Setter.Value>
                                    <MultiBinding StringFormat="UI_DestinationServer_{0}_AutoID">
                                        <Binding Path="DisplayName"/>
                                    </MultiBinding>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="FontWeight" Value="Bold" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="FontWeight" Value="UltraLight" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </nv:NavigationView.ItemContainerStyle>
                    <nv:NavigationView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type navigation:AbstractTreeViewModel}" ItemsSource="{Binding Path=Children}">
                            <StackPanel Orientation="Horizontal" AllowDrop="True">
                                <i:Interaction.Behaviors>
                                    <local:NavigationItemViewModelMouseDownBehavior SelectOnClick="True" />
                                </i:Interaction.Behaviors>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DisplayName}" />
                                    <TextBlock Text=" (" Visibility="{Binding ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                    <TextBlock Text="{Binding ChildrenCount, Mode=OneWay}"  Visibility="{Binding ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                    <TextBlock Text=")" Visibility="{Binding ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                </StackPanel>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </nv:NavigationView.ItemTemplate>                    
                </nv:NavigationView>
            </Grid>
            
            <Grid Grid.ColumnSpan="2" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="0,5,5,0" FontWeight="Bold" >Selected for Deploy:</TextBlock>

                <ItemsControl Grid.Column="0" Grid.Row="1" Grid.IsSharedSizeScope="True" ItemsSource="{Binding SourceStats}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" SharedSizeGroup="AA" />
                                    <ColumnDefinition Width="*" SharedSizeGroup="BB" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" HorizontalAlignment="Right">
                                    <Run Text="{Binding Name}" />
                                    <Run Text=" : " />
                                </TextBlock>
                                <TextBlock Grid.Column="1" Text="{Binding Description}" HorizontalAlignment="Left" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Grid.Column="1" Grid.Row="0" Margin="0,5,5,0" FontWeight="Bold" >Deploy Summary:</TextBlock>

                <ItemsControl Grid.Column="1" Grid.Row="1"
                                Grid.IsSharedSizeScope="True" ItemsSource="{Binding TargetStats}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" SharedSizeGroup="AA" />
                                    <ColumnDefinition Width="*" SharedSizeGroup="BB" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" HorizontalAlignment="Right">
                                <Run Text="{Binding Name}" />
                                <Run Text=" : " />
                                </TextBlock>
                                <TextBlock Grid.Column="1" Text="{Binding Description}" HorizontalAlignment="Left" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Grid.Column="2" Grid.Row="0" Margin="0,5,5,0" FontWeight="Bold" >Steps to Deploy:</TextBlock>

                <Grid Grid.Column="2" Grid.Row="1" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0" Grid.Row="0" Style="{StaticResource ImageTickStyle}" 
                               Visibility="{Binding SelectedSourceServer, Converter={StaticResource NullToVisibilityConverterNullIsCollapsed}}"/>
                    <TextBlock Grid.Column="1" Grid.Row="0" Text="1. Connect to a source server." AutomationProperties.AutomationId="UI_DeploySourceTB_AutoID"
                                   VerticalAlignment="Center" Margin="3,0,0,0"/>

                    <Image Grid.Column="0" Grid.Row="1" Style="{StaticResource ImageTickStyle}" 
                               Visibility="{Binding SelectedDestinationServer, Converter={StaticResource NullToVisibilityConverterNullIsCollapsed}}"/>
                    <TextBlock Grid.Column="1" Grid.Row="1" Text="2. Connect to a destination server." AutomationProperties.AutomationId="UI_DeployDestinationTB_AutoID"
                                   VerticalAlignment="Center" Margin="3,0,0,0"/>

                    <Image Grid.Column="0" Grid.Row="2" Style="{StaticResource ImageTickStyle}" 
                               Visibility="{Binding SourceItemsSelected, Converter={StaticResource BoolToVisibilityConverterPositive}}"/>
                    <TextBlock Grid.Column="1" Grid.Row="2" Text="3. Please select something to deploy." AutomationProperties.AutomationId="UI_DeploySelectTB_AutoID"
                                   VerticalAlignment="Center" Margin="3,0,0,0"/>
                </Grid>
            </Grid>
            
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <customDev2Controls:CircularProgressBar Height="15" Width="15" VerticalAlignment="Center" Margin="0,0,5,0" 
                                                        Visibility="{Binding IsDeploying, Converter={StaticResource BoolToVisConverter}}"/>
                <Button AutomationProperties.AutomationId="UI_Deploybtn_AutoID" 
                    Content="Deploy" HorizontalAlignment="Left" Background="Transparent"
                    BorderBrush="Transparent" Command="{Binding DeployCommand}" IsEnabled="{Binding CanDeploy}" MaxWidth="50" MinWidth="50" />
            </StackPanel>
        </Grid>                
    </Grid>
</UserControl>
