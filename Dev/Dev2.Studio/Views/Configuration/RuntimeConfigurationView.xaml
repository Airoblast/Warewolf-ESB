<UserControl x:Class="Dev2.Studio.Views.Configuration.RuntimeConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Dev2="clr-namespace:Dev2.UI"
             xmlns:customControls="clr-namespace:Dev2.CustomControls;assembly=Dev2.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="3">
            <Dev2:ConnectControl Grid.Row="0" Width="250"
                                 LabelText="Server:" 
                                 ServerChangedCommand="{Binding SourceServerChangedCommand}"
                                 ConnectButtonAutomationID="UI_SourceServerConnectbtn_AutoID"
                                 ServerComboBoxAutomationID="UI_SourceServercbx_AutoID"
                                 Context="{Binding Context}" />
            <customControls:CircularProgressBar Height="15" Width="15" VerticalAlignment="Center" Margin="5,0,0,0" 
                                                    Visibility="{Binding IsWorking, Converter={StaticResource BoolToVisConverter}}"
                                                    AutomationProperties.AutomationId="UI_Progress_Indicator" />
        </StackPanel>

        <ContentControl Grid.Row="1" Content="{Binding RuntimeConfigurationUserControl}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        Margin="3"/>
    </Grid>
</UserControl>
