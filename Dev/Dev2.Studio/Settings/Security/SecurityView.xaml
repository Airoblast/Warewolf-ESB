<UserControl x:Class="Dev2.Settings.Security.SecurityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Dev2.Settings.Security"             
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:SecurityViewModel}">
    
    <UserControl.Resources>
        <local:IgnoreNewItemPlaceHolderConverter x:Key="IgnoreNewItemPlaceHolderConverter"/>
        
        <Style x:Key="PermissionsGridStyle" TargetType="{x:Type DataGrid}">
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource DataGridBorderBrush}"/>
            <Setter Property="VerticalGridLinesBrush" Value="{StaticResource DataGridBorderBrush}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="BorderThickness" Value="1,1,0,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource DataGridBorderBrush}"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="True"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="False"/>
       </Style>
            
        <Style x:Key="PermissionsGridHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="{StaticResource DataGridColumnHeaderBackgroundBrush}" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="3,0" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="BorderBrush" Value="{StaticResource DataGridBorderBrush}" />
            <Setter Property="Foreground" Value="{StaticResource BrushDarkForeground}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Height" Value="Auto" />
        </Style>     
        
        <Style x:Key="PermissionsGridCheckBoxHeaderStyle" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource PermissionsGridHeaderStyle}">
            <Setter Property="Width" Value="83" />
            <Setter Property="MinWidth" Value="83" />
        </Style>
            
        <Style x:Key="PermissionsGridRowStyle" TargetType="{x:Type DataGridRow}">
           
        </Style>
        
        <Style x:Key="PermissionsGridRowServerStyle" TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource PermissionsGridRowStyle}">
            <Style.Triggers>
                <DataTrigger Value="0">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource DataGridRowNumberConverter}">
                            <Binding />
                            <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}" />
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="PermissionsGridCellStyle" TargetType="{x:Type DataGridCell}">
            <Setter Property="IsTabStop" Value="False"/>
        </Style>   
        
        <Style x:Key="PermissionsGridTextBoxStyle" TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="AcceptsReturn" Value="False"/>
            <Setter Property="Width" Value="Auto" />
        </Style>
                  
        <Style x:Key="PermissionsGridCheckBoxStyle" TargetType="{x:Type CheckBox}" BasedOn="{StaticResource CheckBoxStyle}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
                  
        <Style x:Key="PermissionsGridWindowsGroupButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Content" Value="..."/>
            <Setter Property="ToolTip" Value="Select Windows Group"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Command" Value="{Binding DataContext.PickWindowsGroupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <Setter Property="CommandParameter" Value="{Binding}"/>
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_Security_Row{1}_PickWindowsGroupButton"
                                    Converter="{StaticResource DataGridRowNumberConverter}">
                        <Binding />
                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>
                     
        <Style x:Key="PermissionsGridResourceButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Content" Value="..."/>
            <Setter Property="ToolTip" Value="Select Resource"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Command" Value="{Binding DataContext.PickResourceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <Setter Property="CommandParameter" Value="{Binding}"/>
            <Setter Property="AutomationProperties.AutomationId">
                <Setter.Value>
                    <MultiBinding StringFormat="UI_Security_Row{1}_PickResourceButton"
                                    Converter="{StaticResource DataGridRowNumberConverter}">
                        <Binding />
                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>
     
    </UserControl.Resources>
    
    <Grid>
        <StackPanel VerticalAlignment="Top"
                    Orientation="Vertical">

            <Label Content="Server Permissions"
                   Style="{StaticResource Dev2HeadingLabelStyle}" />

            <DataGrid x:Name="ServerPermissionsDataGrid" ItemsSource="{Binding ServerPermissions}"
                      Style="{StaticResource PermissionsGridStyle}"
                      RowStyle="{StaticResource PermissionsGridRowServerStyle}" 
                      AddingNewItem="OnAddingNewServerItem">

                <DataGrid.Columns>

                    <DataGridTemplateColumn Header="Windows Group"
                                            Width="*"
                                            HeaderStyle="{StaticResource PermissionsGridHeaderStyle}"                                            
                                            d:DataContext="{d:DesignInstance Type=local:WindowsGroupPermission}">
                        <DataGridTemplateColumn.CellTemplate>
                             <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox Text="{Binding WindowsGroup, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                             Style="{StaticResource PermissionsGridTextBoxStyle}"                                             
                                             GotKeyboardFocus="OnServerTextChanged"/>
                                    <Button Grid.Column="1" Style="{StaticResource PermissionsGridWindowsGroupButtonStyle}" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <!--<DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding WindowsGroup, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                             Style="{StaticResource PermissionsGridTextBoxStyle}"/>
                                    <Button Grid.Column="1" Style="{StaticResource PermissionsGridWindowsGroupButtonStyle}" />
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding }"></DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>-->
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Deploy To"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=local:WindowsGroupPermission}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding DeployTo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource PermissionsGridCheckBoxStyle}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Deploy From"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=local:WindowsGroupPermission}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding DeployFrom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource PermissionsGridCheckBoxStyle}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Administrator"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=local:WindowsGroupPermission}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Administrator, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource PermissionsGridCheckBoxStyle}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="View"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=local:WindowsGroupPermission}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding View, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource PermissionsGridCheckBoxStyle}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Execute"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=local:WindowsGroupPermission}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Execute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource PermissionsGridCheckBoxStyle}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Contribute"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=local:WindowsGroupPermission}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Contribute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource PermissionsGridCheckBoxStyle}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>

            </DataGrid>

            <Label Content="Resource Permissions"
                   Style="{StaticResource Dev2HeadingLabelStyle}"
                   Margin="0,10,0,0"/>

            <DataGrid x:Name="ResourcePermissionsDataGrid"
                      ItemsSource="{Binding ResourcePermissions}"
                      Style="{StaticResource PermissionsGridStyle}"
                      RowStyle="{StaticResource PermissionsGridRowStyle}"
                      AddingNewItem="OnAddingNewResourceItem">

                <DataGrid.Columns>

                    <DataGridTemplateColumn Header="Resources"
                                            Width="*"
                                            HeaderStyle="{StaticResource PermissionsGridHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=local:WindowsGroupPermission}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding ResourceName, Mode=TwoWay}"/>
                                    <Button Grid.Column="1"
                                            Style="{StaticResource PermissionsGridResourceButtonStyle}" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Windows Group"
                                            Width="249"
                                            HeaderStyle="{StaticResource PermissionsGridHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=local:WindowsGroupPermission}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding WindowsGroup, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                             Style="{StaticResource PermissionsGridTextBoxStyle}" 
                                             GotKeyboardFocus="OnResourcesTextChanged"/>
                                    <Button Grid.Column="1"
                                            Style="{StaticResource PermissionsGridWindowsGroupButtonStyle}" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="View"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=local:WindowsGroupPermission}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding View, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource PermissionsGridCheckBoxStyle}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn Header="Execute"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=local:WindowsGroupPermission}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Execute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource PermissionsGridCheckBoxStyle}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Contribute"
                                            HeaderStyle="{StaticResource PermissionsGridCheckBoxHeaderStyle}"
                                            d:DataContext="{d:DesignInstance Type=local:WindowsGroupPermission}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Contribute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource PermissionsGridCheckBoxStyle}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>

            </DataGrid>

        </StackPanel>
    </Grid>
</UserControl>
