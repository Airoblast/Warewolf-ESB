<sap:ActivityDesigner x:Class="Unlimited.Applications.BusinessDesignStudio.Activities.DsfIndexActivityDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"    
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"                     
    xmlns:local="clr-namespace:Dev2.Studio.AppResources.Behaviors"
    xmlns:Dev2="clr-namespace:Dev2.UI"
    xmlns:InterfaceImplementors="clr-namespace:Dev2.Studio.InterfaceImplementors"
    Width="Auto"
    xmlns:attachedProperties="clr-namespace:Dev2.Studio.AppResources.AttachedProperties"
                      xmlns:interfaceImplementors="clr-namespace:Dev2.Studio.InterfaceImplementors;assembly=Dev2.Intellisense"
                      xmlns:ui="clr-namespace:Dev2.UI;assembly=Dev2.Intellisense"
                      xmlns:attachedProperties2="clr-namespace:Dev2.Studio.AppResources.AttachedProperties;assembly=Dev2.Activities.Designers"
                      PreviewMouseDoubleClick="DsfIndexActivityDesigner_OnPreviewMouseDoubleClick"
                      MouseEnter="DsfIndexActivityDesigner_OnMouseEnter"
                      MouseLeave="DsfIndexActivityDesigner_OnMouseLeave">
    <sap:ActivityDesigner.Resources>
        <interfaceImplementors:CalculateIntellisenseTextConverter x:Key="ModelTextConverter" />
    </sap:ActivityDesigner.Resources>
    <sap:ActivityDesigner.Icon>
        <DrawingBrush>
            <DrawingBrush.Drawing>
                <ImageDrawing>
                    <ImageDrawing.Rect>
                        <Rect Location="0,0" Size="16,16" ></Rect>
                    </ImageDrawing.Rect>
                    <ImageDrawing.ImageSource>
                        <BitmapImage UriSource="pack://application:,,,/Warewolf Studio;component/Images/ToolFindIndex-32.png" ></BitmapImage>
                    </ImageDrawing.ImageSource>
                </ImageDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </sap:ActivityDesigner.Icon>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="In Field" Name="lblInField" Grid.Column="0" Grid.Row="0"/>
        <ui:IntellisenseTextBox Grid.ColumnSpan="2"  x:Name="txtInField" DefaultText="InField" FilterType="All" 
                                  WrapInBrackets="False" Grid.Column="1" Grid.Row="0" 
                                  Text="{Binding Path=ModelItem.InField, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Margin="0,2,1,2" Width="140"
                                  attachedProperties2:WizardEngineAttachedProperties.DontOpenWizard="True">
            <AutomationProperties.AutomationId>
                <Binding StringFormat="UI_{0}_InFieldtxt_AutoID" Path="ModelItem.AutomationID"/>
            </AutomationProperties.AutomationId>
        </ui:IntellisenseTextBox>
        <Label Content="Index" Name="lblIndex" Grid.Column="0" Grid.Row="1"/>
        <ComboBox Style ="{StaticResource ActivityComboBoxStyle}" Grid.ColumnSpan="2" x:Name="cbxIndex" 
                  Grid.Column="1" Grid.Row="1"
                  Text="{Binding Path=ModelItem.Index, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Margin="0,2,1,2" Width="140"
                                  attachedProperties2:WizardEngineAttachedProperties.DontOpenWizard="True">
            <AutomationProperties.AutomationId>
                <Binding StringFormat="UI_{0}_Indextcbx_AutoID" Path="ModelItem.AutomationID"/>
            </AutomationProperties.AutomationId>
        </ComboBox>
        <Label Content="Characters" Name="lblCharacters" Grid.Column="0" Grid.Row="2"/>
        <ui:IntellisenseTextBox x:Name="txtCharacters" Grid.Column="1" 
                                  DefaultText="Look for info" 
                                  Text="{Binding Path=ModelItem.Characters,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                  Grid.Row="2" 
                                  Margin="0,2,1,2" Width="140"
                                  attachedProperties2:WizardEngineAttachedProperties.DontOpenWizard="True">
            <AutomationProperties.AutomationId>
                <Binding StringFormat="UI_{0}_Characterstxt_AutoID" Path="ModelItem.AutomationID"/>
            </AutomationProperties.AutomationId>
        </ui:IntellisenseTextBox>
        <Label Content="Direction" Name="lblDirection" Grid.Column="0" Grid.Row="3"/>
        <ComboBox Style ="{StaticResource ActivityComboBoxStyle}" Grid.ColumnSpan="2" 
                  x:Name="cbxDirection" Grid.Column="1" Grid.Row="3" 
                  Text="{Binding Path=ModelItem.Direction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                   Margin="0,2,1,2" Width="140"
                                  attachedProperties2:WizardEngineAttachedProperties.DontOpenWizard="True">
            <AutomationProperties.AutomationId>
                <Binding StringFormat="UI_{0}_Directioncbx_AutoID" Path="ModelItem.AutomationID"/>
            </AutomationProperties.AutomationId>
        </ComboBox>
        <Label Content="Result" Name="lblResult" Grid.Column="0" Grid.Row="4"/>
        <ui:IntellisenseTextBox Grid.ColumnSpan="2" x:Name="txtResult" DefaultText="[[Result]]" 
                                  FilterType="All" WrapInBrackets="True" Grid.Column="1" Grid.Row="4" 
                                  Text="{Binding Path=ModelItem.Result, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                  Margin="0,2,1,2" Width="140"
                                  attachedProperties2:WizardEngineAttachedProperties.DontOpenWizard="True">
            <AutomationProperties.AutomationId>
                <Binding StringFormat="UI_{0}_Resulttxt_AutoID" Path="ModelItem.AutomationID"/>
            </AutomationProperties.AutomationId>
        </ui:IntellisenseTextBox>
    </Grid>
</sap:ActivityDesigner>
