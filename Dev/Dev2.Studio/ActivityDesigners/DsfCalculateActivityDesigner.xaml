<sap:ActivityDesigner x:Class="Unlimited.Applications.BusinessDesignStudio.Activities.DsfCalculateActivityDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"                     
    xmlns:local="clr-namespace:Dev2.Studio.AppResources.Behaviors"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation"
    xmlns:Dev2="clr-namespace:Dev2.UI"
    xmlns:InterfaceImplementors="clr-namespace:Dev2.Studio.InterfaceImplementors"
    MaxWidth="230"
    Width="230"
    xmlns:attachedProperties="clr-namespace:Dev2.Studio.AppResources.AttachedProperties"
                      PreviewMouseDoubleClick="DsfCalculateActivityDesigner_OnPreviewMouseDoubleClick">
    <sap:ActivityDesigner.Icon>
        <DrawingBrush>
            <DrawingBrush.Drawing>
                <ImageDrawing>
                    <ImageDrawing.Rect>
                        <Rect Location="0,0" Size="16,16" ></Rect>
                    </ImageDrawing.Rect>
                    <ImageDrawing.ImageSource>
                        <BitmapImage UriSource="pack://application:,,,/Warewolf Studio;component/Images/ToolCalculate-32.png" ></BitmapImage>
                    </ImageDrawing.ImageSource>
                </ImageDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </sap:ActivityDesigner.Icon>
    <sap:ActivityDesigner.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Create AutomationID">
                <i:Interaction.Behaviors>
                    <local:AutomationIdCreationBehaviour AutomationIdCreation="{Binding Path=ModelItem}" />
                </i:Interaction.Behaviors>
            </MenuItem>
        </ContextMenu>
    </sap:ActivityDesigner.ContextMenu>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="124*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="fx =" Name="lblExpression" FontStyle="Italic" Grid.Column="0" Grid.Row="0"/>
        <Dev2:IntellisenseTextBox x:Name="txtExpression" DefaultText="Excel like function." Height="39" MinHeight="39" FilterType="All" AllowUserCalculateMode="False" IsInCalculateMode="True" Grid.Column="1" Grid.Row="0" Text="{Binding Path=ModelItem.Expression, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,2,1,2" MinWidth="100"
                                  attachedProperties:WizardEngineAttachedProperties.DontOpenWizard="True">
            <AutomationProperties.AutomationId>
                <MultiBinding StringFormat="UI_{0}_fxtxt_AutoID">
                    <Binding Path="ModelItem.AutomationID"/>
                </MultiBinding>
            </AutomationProperties.AutomationId>
            <Dev2:IntellisenseTextBox.IntellisenseProvider>
                <InterfaceImplementors:CompositeIntellisenseProvider>
                    <InterfaceImplementors:DefaultIntellisenseProvider />
                    <InterfaceImplementors:CalculateIntellisenseProvider />
                </InterfaceImplementors:CompositeIntellisenseProvider>
            </Dev2:IntellisenseTextBox.IntellisenseProvider>
        </Dev2:IntellisenseTextBox>
        <Label Content="Result" Name="lblResult" Grid.Column="0" Grid.Row="1"/>
        <Dev2:IntellisenseTextBox x:Name="txtResult" WrapInBrackets="True" DefaultText="[[fxResult]]" FilterType="All" Grid.Column="1" Grid.Row="1" Text="{Binding Path=ModelItem.Result, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,2,1,2" MinWidth="100" 
                                  attachedProperties:WizardEngineAttachedProperties.DontOpenWizard="True"/>
        <AutomationProperties.AutomationId>
            <MultiBinding StringFormat="UI_{0}_Resulttxt_AutoID">
                <Binding Path="ModelItem.AutomationID"/>
            </MultiBinding>
        </AutomationProperties.AutomationId>
    </Grid>
</sap:ActivityDesigner>
