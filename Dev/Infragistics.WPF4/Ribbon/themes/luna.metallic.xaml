        <Setter Property="BorderBrush" Value="{StaticResource {x:Static igRibbon:RibbonBrushKeys.ScenicCaptionCloseBtnNormalBorderFillKey}}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="0"/>
		<Setter Property="Content" Value="{StaticResource CloseGlyph}"/>
		<Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource {x:Static igRibbon:RibbonBrushKeys.ScenicCaptionCloseBtnHoverBackgroundFillKey}}"/>
                <Setter Property="BorderBrush" Value="{StaticResource {x:Static igRibbon:RibbonBrushKeys.ScenicCaptionCloseBtnHoverBorderFillKey}}"/>
            </Trigger>

            <Trigger Property="IsPressed" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource {x:Static igRibbon:RibbonBrushKeys.ScenicCaptionCloseBtnPressedBorderFillKey}}"/>
                <Setter Property="Background" Value="{StaticResource {x:Static igRibbon:RibbonBrushKeys.ScenicCaptionCloseBtnPressedBackgroundFillKey}}"/>
            </Trigger>

            <DataTrigger Binding="{Binding Path=IsActive, RelativeSource={RelativeSource FindAncestor, {x:Type Window}, 1}}" Value="False">
