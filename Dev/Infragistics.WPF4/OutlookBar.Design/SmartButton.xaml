    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="20" Width="20"
    xmlns:local="clr-namespace:Infragistics.Windows.Design.OutlookBar" >
    
    <Button x:FieldModifier="public" x:Name="btnSmart" Click="btnSmart_Click" BorderThickness="0" BorderBrush="Transparent" 
