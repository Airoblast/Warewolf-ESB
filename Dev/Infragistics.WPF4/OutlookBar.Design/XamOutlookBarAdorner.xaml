<UserControl x:Class="Infragistics.Windows.Design.OutlookBar.XamOutlookBarAdorner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:local="clr-namespace:Infragistics.Windows.Design.OutlookBar"    
    Background="White" BorderThickness="0.3" BorderBrush="Black" >

    <Grid >
		<Grid.Resources>
			<Style TargetType="{x:Type Label}">
				<Setter Property="Foreground" Value="Black"/>
			</Style>
		</Grid.Resources>

		<Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="144" />
            <ColumnDefinition Width="Auto" MinWidth="6" />
            <ColumnDefinition Width="Auto" MinWidth="25" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="5" />
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="22" />
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Grid.ColumnSpan="3" Fill="LightGray" ></Rectangle>
        <Label Grid.Row="0" Grid.ColumnSpan="2"  Name="lblTitle" FontWeight="Bold" FontSize="12" VerticalAlignment="Center" Content="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_lblTitleContent}"></Label>
        <Button Name="btnClose" Grid.Column="2"   Click="btnClose_Click"  BorderBrush="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0" >
            <Button.Content>
                <Image Stretch="UniformToFill" Source="Images/CloseButton.gif" ></Image>
            </Button.Content>
        </Button>

        <Label x:Name="lblActions" Grid.ColumnSpan="3" Grid.Row="1" Content="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_lblActionsContent}"  FontWeight="Bold" FontSize="12"></Label>

        <local:LinkButton  x:Name="lbAddGroupGrid"  Text="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_lbAddGroupGridText}" Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="5,0,5,0" />

        <Image Name="imgAddGroupGrid" Grid.Row="2" Grid.Column="2" ToolTip="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_imgAddGroupGridToolTip}"
               Source="Images/Information.png" Width="17" Height="17" Margin="3,0,5,0"></Image>

        <local:LinkButton x:Name="lbAddGroupTree"  Text="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_lbAddGroupTreeText}" Grid.Row="3" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,5,0"  />

        <Image Name="imgAddGroupTreeToolTip" Grid.Row="3" Grid.Column="2" ToolTip="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_imgAddGroupTreeToolTip}" 
               Source="Images/Information.png" Width="17" Height="17" Margin="3,0,5,0"></Image>

        <local:LinkButton x:Name="lbAddGroupRadio"  Text="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_lbAddGroupRadioText}" Grid.Row="4" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,5,0" />

        <Image Name="imgAddGroupRadioText" Grid.Row="4" Grid.Column="2" ToolTip="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_imgAddGroupRadioToolTip}"  
               Source="Images/Information.png" Width="17" Height="17" Margin="3,0,5,0"></Image>
      
        <local:LinkButton x:Name="lbAddGroupCalendar"  Text="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_lbAddGroupCalendarText}"  Grid.Row="5" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,5,0" />

        <Image Name="imgAddGroupCalendar" Grid.Row="5" Grid.Column="2" ToolTip="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_imgAddGroupCalendarToolTip}" 
               Source="Images/Information.png" Width="17" Height="17" Margin="3,0,5,0"></Image>

        <TextBlock Grid.Row="6" Grid.ColumnSpan="3"></TextBlock>

        <local:LinkButton x:Name="lbShowMoreButtons"  Text="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_lbShowMoreButtonsText}"  Grid.Row="7" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,5,0" />

        <Image Name="imgShowMoreButtons" Grid.Row="7" Grid.Column="2" ToolTip="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_imgShowMoreButtonsToolTip}" 
               Source="Images/Information.png" Width="17" Height="17" Margin="3,0,5,0"></Image>
      
        <local:LinkButton x:Name="lbShowFewerButtons"  Text="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_lbShowFewerButtonsText}"  Grid.Row="8" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,5,0" />

        <Image Name="imgShowFewerButtons" Grid.Row="8" Grid.Column="2" ToolTip="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_imgShowFewerButtonsToolTip}" 
               Source="Images/Information.png" Width="17" Height="17" Margin="3,0,5,0"></Image>
       
        <local:LinkButton x:Name="lbAutoNumberButtons"  Text="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_lbAutoNumberButtonsText}"  Grid.Row="9" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,5,0" />

        <Image Name="imgAutoNumberButtons" Grid.Row="9" Grid.Column="2" ToolTip="{x:Static local:DesignResources.LST_OutlookBar_XamOutlookBarAdorner_imgAutoNumberButtonsToolTip}" 
               Source="Images/Information.png" Width="17" Height="17" Margin="3,0,5,0"></Image>

    </Grid>
</UserControl>
