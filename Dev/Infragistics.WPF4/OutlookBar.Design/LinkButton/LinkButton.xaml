<UserControl x:Class="Infragistics.Windows.Design.OutlookBar.LinkButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Infragistics.Windows.Design.OutlookBar"    
    >
    <TextBlock Name="textBlock" >        
            <Hyperlink Name="hyperLink" Click="hyperLink_Click" 
                 IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:LinkButton}}, Path=IsEnabled}">                
                <Run Name="run" />                
            </Hyperlink>
    </TextBlock>
</UserControl>
