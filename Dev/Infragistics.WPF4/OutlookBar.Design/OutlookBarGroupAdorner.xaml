<UserControl x:Class="Infragistics.Windows.Design.OutlookBar.OutlookBarGroupAdorner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:local="clr-namespace:Infragistics.Windows.Design.OutlookBar"    
    Background="White" BorderThickness="0.3" BorderBrush="Black" >
  
    <Grid>
		<Grid.Resources>
			<Style TargetType="{x:Type Label}">
				<Setter Property="Foreground" Value="Black"/>
			</Style>
		</Grid.Resources>
		
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto"  />
            <ColumnDefinition Width="Auto"  />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="Auto" MinHeight="22" />
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Grid.ColumnSpan="3" Fill="LightGray" ></Rectangle>
        <Label Name="lblTitle" Grid.Row="0" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="12" Content="{x:Static local:DesignResources.LST_OutlookBar_OutlookBarGroupAdorner_lblTitleContent}"></Label>
        <Button Name="btnClose" Grid.Column="2"   Click="btnClose_Click"  BorderBrush="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0" >
            <Button.Content>
                <Image Stretch="UniformToFill" Source="Images/CloseButton.gif" ></Image>
            </Button.Content>
        </Button>

        <Label Name="lblActions" Grid.ColumnSpan="3" Grid.Row="1" Content="{x:Static local:DesignResources.LST_OutlookBar_OutlookBarGroupAdorner_lblActionsContent}" FontWeight="Bold" FontSize="12"></Label>
       
        <local:LinkButton x:Name="lbAddContentTree" Text="{x:Static local:DesignResources.LST_OutlookBar_OutlookBarGroupAdorner_lbAddContentTreeText}" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,5,0"/>

        <Image Name="imgAddContentTree" Grid.Row="2" Grid.Column="2" ToolTip="{x:Static local:DesignResources.LST_OutlookBar_OutlookBarGroupAdorner_imgAddContentTreeToolTip}" 
               Source="Images/Information.png" Width="17" Height="17" Margin="3,0,5,0"></Image>
      
        <local:LinkButton x:Name="lbAddContentRadio" Text="{x:Static local:DesignResources.LST_OutlookBar_OutlookBarGroupAdorner_lbAddContentRadioText}" Grid.Row="3" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,5,0" />

        <Image Name="imgAddContentRadio"  Grid.Row="3" Grid.Column="2" ToolTip="{x:Static local:DesignResources.LST_OutlookBar_OutlookBarGroupAdorner_imgAddContentRadioToolTip}" 
               Source="Images/Information.png" Width="17" Height="17" Margin="3,0,5,0"></Image>

        <local:LinkButton x:Name="lbAddContentCalendar" Text="{x:Static local:DesignResources.LST_OutlookBar_OutlookBarGroupAdorner_lbAddContentCalendarText}" Grid.Row="4" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,5,0"/>

        <Image Name="imgAddContentCalendar" Grid.Row="4" Grid.Column="2" ToolTip="{x:Static local:DesignResources.LST_OutlookBar_OutlookBarGroupAdorner_imgAddContentCalendarToolTip}" 
               Source="Images/Information.png" Width="17" Height="17" Margin="3,0,5,0"></Image>

        <Label Name="lblAppearance" Grid.ColumnSpan="3" Grid.Row="5" Content="{x:Static local:DesignResources.LST_OutlookBar_OutlookBarGroupAdorner_lblAppearanceContent}" FontWeight="Bold" FontSize="12"></Label>

        <Label Grid.Row="6" Grid.Column="0" Name="lblHeader" VerticalAlignment="Center" Margin="2,0,0,0" Content="{x:Static local:DesignResources.LST_OutlookBar_OutlookBarGroupAdorner_lblHeaderContent}" ></Label>
        <TextBox Grid.Row="6" Grid.Column="1" Name="tbHeader" Margin="0,2,0,2" MinWidth="140"></TextBox>
        <Image Name="imgHeader" Grid.Row="6" Grid.Column="2" ToolTip="{x:Static local:DesignResources.LST_OutlookBar_OutlookBarGroupAdorner_imgHeaderToolTip}" 
               Source="Images/Information.png" Width="17" Height="17" Margin="3,0,5,0"></Image>

        <StackPanel Grid.ColumnSpan="2" Grid.Row="7" Orientation="Horizontal">
            <CheckBox Name="cbIsSelected" IsChecked="False" VerticalAlignment="Center" Margin="5" ></CheckBox>
            <Label Name="lblIsSelected" Content="{x:Static local:DesignResources.LST_OutlookBar_OutlookBarGroupAdorner_lblIsSelectedContent}"></Label>
        </StackPanel>
        <Image Name="imgIsSelected" Grid.Row="7" Grid.Column="2" ToolTip="{x:Static local:DesignResources.LST_OutlookBar_OutlookBarGroupAdorner_imgIsSelectedToolTip}" 
               Source="Images/Information.png" Width="17" Height="17" Margin="3,0,5,0"></Image>

    </Grid>
</UserControl>
