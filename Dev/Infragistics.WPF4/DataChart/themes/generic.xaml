    </DataTemplate>

    <DataTemplate x:Key="LegendItemLineBadgeTemplate">
        <Grid Width="18" Height="16" Margin="0 0 2 0" >
            <Line VerticalAlignment="Center" HorizontalAlignment="Center"
                    X1="0" Y1="0" X2="16" Y2="0"
                    Stroke="{Binding Series.ActualBrush}" StrokeThickness="{Binding Series.Thickness}"
