    <!-- Legend -->

    <Style TargetType="local:Legend">
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        <Setter Property="Background" Value="{StaticResource LegendBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GenericBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Legend">
                    <Grid>
                        <Border BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="4" Background="{TemplateBinding Background}">

                            <Grid Margin="{TemplateBinding Padding}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Rectangle Fill="Transparent" Grid.RowSpan="2"/>
                                <ContentPresenter Grid.Row="0" Content="{TemplateBinding Content}" />
                                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" BorderThickness="0" Background="Transparent">
                                    <ContentPresenter Grid.Row="1" x:Name="ContentPresenter"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                        <Border IsHitTestVisible="False" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="Transparent" CornerRadius="4" Background="{StaticResource GenericOverlay}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- LegendItemContent -->

    <DataTemplate x:Key="LegendItemTemplate">
        <StackPanel Orientation="Horizontal" Margin="1" Visibility="{Binding Series.Visibility}">
            <ContentPresenter Content="{Binding}" ContentTemplate="{Binding Series.LegendItemBadgeTemplate}" />
            <ContentPresenter Content="{Binding Series.Title, TargetNullValue=Series Title}"/>
        </StackPanel>
    </DataTemplate>

    <!-- OverlayLegendItemTemplate -->
    <DataTemplate x:Key="OverlayLegendItemTemplate">
        <StackPanel Orientation="Horizontal" Margin="1" Visibility="{Binding Series.Visibility}">
            <ContentPresenter Content="{Binding}" ContentTemplate="{Binding Series.LegendItemBadgeTemplate}" />
            <ContentPresenter Content="{Binding Series.Title, TargetNullValue=Overlay Title}"/>
        </StackPanel>
    </DataTemplate>

    <!-- DiscreteLegendItemContent - used for ItemLegend -->
    <DataTemplate x:Key="DiscreteLegendItemTemplate">
        <StackPanel Orientation="Horizontal" Margin="1" Visibility="{Binding Series.Visibility}">
            <ContentPresenter Content="{Binding}" ContentTemplate="{Binding Series.LegendItemBadgeTemplate}" />
            <ContentPresenter Content="{Binding ItemLabel, TargetNullValue=Series Item}"/>
        </StackPanel>
    </DataTemplate>

    <!-- PieChartLegendItem-->
    <DataTemplate x:Key="PieLegendItemTemplate">
        <StackPanel Orientation="Horizontal" Margin="1" Visibility="{Binding Series.Visibility}">
            <ContentPresenter Content="{Binding}" ContentTemplate="{Binding Series.LegendItemBadgeTemplate}"/>
            <ContentPresenter Content="{Binding ItemLabel, TargetNullValue=Pie Item}"/>
        </StackPanel>
    </DataTemplate>

    <!-- PieChartLegendItemBadge-->
    <DataTemplate x:Key="PieChartLegendItemBadgeTemplate">
        <ContentPresenter Width="11" Height="11" Margin="0 0 2 0" VerticalAlignment="Center" HorizontalAlignment="Center"
                              Content="{Binding}">
            <ContentPresenter.ContentTemplate>
                <DataTemplate>
                    <Rectangle Stroke="{Binding Slice.BorderBrush}"
                               Fill="{Binding Slice.Background}"
                               StrokeThickness="{Binding Slice.StrokeThickness}"
                               Effect="{Binding Slice.Effect}"
                               />
                </DataTemplate>
            </ContentPresenter.ContentTemplate>
        </ContentPresenter>
    </DataTemplate>

    <!-- FunnelChartLegendItemBadge-->
    <DataTemplate x:Key="FunnelChartLegendItemBadgeTemplate">
        <ContentPresenter Width="11" Height="11" Margin="0 0 2 0" VerticalAlignment="Center" HorizontalAlignment="Center"
                              Content="{Binding}">
            <ContentPresenter.ContentTemplate>
                <DataTemplate>
                    <Rectangle Stroke="{Binding ItemOutline}"
                               Fill="{Binding ItemBrush}"
                               />
                </DataTemplate>
            </ContentPresenter.ContentTemplate>
        </ContentPresenter>
    </DataTemplate>

    <!-- LegendItem -->

    <DataTemplate x:Key="LegendItemRectBadgeTemplate">
        <Grid Width="18" Height="16" Margin="0 0 2 0" >
            <Path Width="16" Height="14" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Effect="{Binding Series.Effect}" Fill="{Binding Series.ActualBrush}" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="0, 5" IsFilled="True">
                            <PathFigure.Segments>
                                <LineSegment Point="0, 14"/>
                                <LineSegment Point="11, 14"/>
                                <ArcSegment Size="5, 5" IsLargeArc="False" Point="16, 9"/>
                                <LineSegment Point="16, 0"/>
                                <LineSegment Point="5, 0"/>
                                <ArcSegment Size="5, 5" IsLargeArc="False" Point="0, 5"/>
                            </PathFigure.Segments>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>
            <ContentPresenter Width="11" Height="11" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 2 0"
                    ContentTemplate="{Binding Series.ActualMarkerTemplate}" Content="{Binding}"/>
        </Grid>
    </DataTemplate>

