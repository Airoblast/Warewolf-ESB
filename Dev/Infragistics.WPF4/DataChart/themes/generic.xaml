            <Path Width="16" Height="14" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Effect="{Binding Series.Effect}" Fill="{Binding Series.NegativeBrush}" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="0, 14" IsFilled="True">
                            <PathFigure.Segments>
                                <LineSegment Point="11, 14"/>
                                <ArcSegment Size="5, 5" IsLargeArc="False" Point="16, 9"/>
                                <LineSegment Point="16, 0"/>
                            </PathFigure.Segments>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Grid>
    </DataTemplate>

