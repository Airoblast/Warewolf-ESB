<UserControl x:Class="Infragistics.Windows.Design.SmartTagFramework.LinkButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:stf="clr-namespace:Infragistics.Windows.Design.SmartTagFramework"    
    >
    <TextBlock Name="textBlock" IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type stf:LinkButton}}, Path=IsEnabled}">        
            <Hyperlink Name="hyperLink" Click="hyperLink_Click" 
                 IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type stf:LinkButton}}, Path=IsEnabled}"
                 Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type stf:LinkButton}}, Path=Command}"
                 CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type stf:LinkButton}}, Path=CommandParameter}"
                   >                
                <Run Name="run" />                
            </Hyperlink>
    </TextBlock>
</UserControl>
