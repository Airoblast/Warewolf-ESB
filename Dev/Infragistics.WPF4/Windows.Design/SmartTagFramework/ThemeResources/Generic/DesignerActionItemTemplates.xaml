<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:stf="clr-namespace:Infragistics.Windows.Design.SmartTagFramework"    
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"                    
    >
    
    <controls:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter"/>    
    <stf:DesignerActionItemTemplateSelector x:Key="designerActionItemTemplateSelector" />
    <stf:DesignerActionPropertyItemTemplateSelector x:Key="designerActionPropertyItemTemplateSelector" />

    <!--DesignerActionItemGroup Group template-->
    <ControlTemplate x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type stf:GenericAdorner}, ResourceId=DesignerActionItemGroupTemplate}">
        <Expander IsExpanded="{Binding Path=Items[0].DesignerActionItemGroup.IsExpanded}"                                    
                  Header="{Binding Path=Name}"  
				  Foreground="Black"
                  Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type stf:GenericAdorner}, ResourceId=Expander}}"                    
                  >
            <Expander.Content>
                <ContentControl Margin="0,5,0,5" >
                    <ItemsPresenter/>
                </ContentControl>
            </Expander.Content>
        </Expander>
    </ControlTemplate>

    <!--DesignerActionItemTemplate template-->
    <DataTemplate x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type stf:GenericAdorner}, ResourceId=DesignerActionItemTemplate}">
        <ContentControl VerticalAlignment="Center" Content="{Binding}" Foreground="Black"
          ContentTemplateSelector="{StaticResource designerActionItemTemplateSelector}" />
    </DataTemplate>

    <!-- DesignerActionPropertyItem template-->
    <DataTemplate x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type stf:GenericAdorner}, ResourceId=DesignerActionPropertyItemTemplate}">
		<Border BorderBrush="#FFEEEEEE" BorderThickness="1" CornerRadius="5" Margin="10,2,6,2">
			<Grid Margin="1" >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width=".5*"/>
					<ColumnDefinition Width=".5*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				
				<TextBlock Grid.Column="0" DockPanel.Dock="Left" Margin="0,0,8,0" TextAlignment="Left" VerticalAlignment="Center" 
						   Text="{Binding Mode=OneTime, Path=DisplayName}" />
				<ContentControl Grid.Column="1" VerticalAlignment="Center" Content="{Binding Mode=OneWay}" HorizontalAlignment="Right"
								ContentTemplateSelector="{StaticResource designerActionPropertyItemTemplateSelector}" />
				<Image Grid.Column="2" Height="13" Width="13" Source="{x:Static stf:ContentLocators.ImageSourceInfoPng}" 
					   Visibility="{Binding Path=HasDescription, Converter={StaticResource booleanToVisibilityConverter}}" 
					   ToolTip="{Binding Path=Description}" HorizontalAlignment="Right" Margin="3,0,5,0" />
			</Grid>
		</Border>
	</DataTemplate>

	<!-- DesignerActionObjectPropertyItem template-->
	<DataTemplate x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type stf:GenericAdorner}, ResourceId=DesignerActionObjectPropertyItemTemplate}">
		<Border BorderBrush="#FFEEEEEE" BorderThickness="1" CornerRadius="5" Margin="10,2,6,2">
			<Grid Margin="1" >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<Button Grid.Column="0"
                       Command="{x:Static stf:SmartTagFrameworkCommands.ExecuteDesignerActionObjectPropertyItemCommand}" 
                       CommandParameter="{Binding Path=Id}"
					   HorizontalAlignment="Stretch"
					   Cursor="Hand"
					   Foreground="Black"
					   FontSize="12"
					   ToolTip="{x:Static stf:DesignResources.LST_SmartTagFramework_DesignerActionObjectPropertyItemTemplate_btnToolTip}" Margin="0,0,2,0">
					<Button.Template>
						<ControlTemplate TargetType="{x:Type Button}">
							<Grid x:Name="grid">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>
								
								<TextBlock	Grid.Column="0" 
											DockPanel.Dock="Left" 
											Margin="0,0,8,0"
											Foreground="{TemplateBinding Foreground}"
											FontSize="{TemplateBinding FontSize}"
											TextAlignment="Left" 
											VerticalAlignment="Center"
											Background="Transparent"
											Text="{Binding Mode=OneTime, Path=DisplayName}" />

								<ContentPresenter 
											Grid.Column="1"
											Margin="0,0,0,0"
											HorizontalAlignment="Right"
											VerticalAlignment="Center">
									<ContentPresenter.Content>
										<Image	Height="18" Width="18" Source="{x:Static stf:ContentLocators.ImageSourceDrillIntoPng}"/>
									</ContentPresenter.Content>
								</ContentPresenter>
							</Grid>
							<ControlTemplate.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter Property="Background" TargetName="grid" Value="#FFF0F0F0"/>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Button.Template>
				</Button>
				
				<Image Grid.Column="1" Height="13" Width="13" Source="{x:Static stf:ContentLocators.ImageSourceInfoPng}" 
					   Visibility="{Binding Path=HasDescription, Converter={StaticResource booleanToVisibilityConverter}}" 
					   ToolTip="{Binding Path=Description}" HorizontalAlignment="Right" Margin="3,0,5,0" />
			</Grid>
		</Border>
	</DataTemplate>

	<!-- DesignerActionTextItem Templates -->
    <DataTemplate x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type stf:GenericAdorner}, ResourceId=DesignerActionTextItemTemplate}">
        <DockPanel Margin="4,2,6,2">
			<TextBlock Text="{Binding Path=DisplayName}" FontWeight="{Binding Path=FontWeight}" Foreground="{Binding Path=Foreground}"  TextWrapping="Wrap" MaxWidth="300"/>
        </DockPanel>
    </DataTemplate>

    <!-- DesignerActionMethodItem Templates -->
    <DataTemplate x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type stf:GenericAdorner}, ResourceId=DesignerActionMethodItemTemplate}">
        <DockPanel Margin="10,2,6,2">
            <stf:LinkButton Text="{Binding Path=DisplayName, Mode=OneWay}"                               
                              Command="{Binding Path=Command}" 
                              CommandParameter="{Binding Path=DisplayName}"
                              IsEnabled="{Binding Path=IsEnabled}"  
                              ToolTip="{Binding Path=Description}" 
                              HorizontalAlignment="Left" 
                              ></stf:LinkButton>
        </DockPanel>
    </DataTemplate>

</ResourceDictionary>
