<Window x:Class="Infragistics.Windows.Design.DockManager.SplitPaneOptionsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:igEditors="http://infragistics.com/Editors"
	xmlns:igDock="http://infragistics.com/DockManager"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
	xmlns:local="clr-namespace:Infragistics.Windows.Design.DockManager"
    Title="SplitPaneOptionsDialog"
	WindowStartupLocation="CenterScreen"
	SizeToContent="WidthAndHeight"
	ShowInTaskbar="False"
	ResizeMode="NoResize"
	WindowStyle="ToolWindow">
	
    <Grid Width="500">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		
		<Grid.Resources>
			<ObjectDataProvider MethodName="GetValues" 
								ObjectType="{x:Type sys:Enum}" x:Key="OrientationValues">
				<ObjectDataProvider.MethodParameters>
					<x:Type TypeName="Orientation" />
				</ObjectDataProvider.MethodParameters>
			</ObjectDataProvider>

			<ObjectDataProvider MethodName="GetValues" 
                            ObjectType="{x:Type sys:Enum}" x:Key="InitialPaneLocationValues">
				<ObjectDataProvider.MethodParameters>
					<x:Type TypeName="igDock:InitialPaneLocation" />
				</ObjectDataProvider.MethodParameters>
			</ObjectDataProvider>
		</Grid.Resources>
		
		<StackPanel>
			<StackPanel.Resources>
				<Style TargetType="{x:Type Border}">
					<Setter Property="BorderThickness" Value="1"/>
					<Setter Property="BorderBrush" Value="DarkGray"/>
					<Setter Property="CornerRadius" Value="3"/>
					<Setter Property="Margin" Value="5,8,5,8"/>
				</Style>
				
				<Style TargetType="{x:Type Grid}">
					<Setter Property="Margin" Value="5"/>
				</Style>
			</StackPanel.Resources>
			
			<!-- PaneLocation -->
			<Border x:Name="borderPaneLocation">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<TextBlock	Text="{x:Static local:SplitPaneOptionsDialog.string_SplitPaneLocation}" TextAlignment="Left" Grid.Column="0" VerticalAlignment="Center" Foreground="Black"/>
					<ComboBox	x:Name="cmbPaneLocation"
								Grid.Column="1"
								ItemsSource="{Binding Source={StaticResource InitialPaneLocationValues}}"
								SelectedIndex="0"/>
				</Grid>
			</Border>

			<!-- Splitter Orientation -->
			<Border>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					
					<TextBlock	Text="{x:Static local:SplitPaneOptionsDialog.string_SplitterOrientation}" TextAlignment="Left" Grid.Column="0" VerticalAlignment="Center" Foreground="Black"/>
					<ComboBox	x:Name="cmbOrientation"
								Grid.Column="1"
								ItemsSource="{Binding Source={StaticResource OrientationValues}}"
								SelectedIndex="0"/>
				</Grid>
			</Border>
			
			<!-- TotalPanes -->
			<Border>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<TextBlock	x:Name="txtNumberOfPanes" Text="Number of TabGroupPanes to insert" TextAlignment="Left" Grid.Column="0" VerticalAlignment="Center" Foreground="Black"/>
					<igEditors:XamNumericEditor
								x:Name="numTotalPanes"
								ValueType="{x:Type sys:Int32}"
								Grid.Column="1"
								Value="1"
								PromptChar=""
								SpinWrap="False"
								SpinButtonDisplayMode="Always"
								SpinIncrement="1">
						<igEditors:XamNumericEditor.ValueConstraint>
							<igEditors:ValueConstraint MinInclusive="1" MaxInclusive="10"/>
						</igEditors:XamNumericEditor.ValueConstraint>
					</igEditors:XamNumericEditor>
				</Grid>
			</Border>
		</StackPanel>
		
		<Button x:Name="btnOK" Grid.Row="1" Click="btnOK_Click" HorizontalAlignment="Right" Margin="0,20,10,10" MinWidth="100" IsDefault="True" Content="{x:Static local:SplitPaneOptionsDialog.string_OK}"></Button>
	</Grid>
</Window>
